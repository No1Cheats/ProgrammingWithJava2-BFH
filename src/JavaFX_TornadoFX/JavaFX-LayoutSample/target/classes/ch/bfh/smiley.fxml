<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>

<StackPane prefHeight="150.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.bfh.SmileyController">
   <children>
      <Button fx:id="image2"  mnemonicParsing="false" onAction="#showImage1">
         <graphic>   
            <ImageView fitHeight="224.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@smiley2.jpg" />
               </image>
            </ImageView>
         </graphic>
      </Button>   
      <Button fx:id="image1" mnemonicParsing="false" onAction="#showImage2">
         <graphic>
            <ImageView fitHeight="224.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@smiley1.jpg" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</StackPane>
